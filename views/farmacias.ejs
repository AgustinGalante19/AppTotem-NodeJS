<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../public/components/head') %>
        <title>Farmacias de turno</title>
</head>

<body class="landing-page"
    style="background-image: url('https://activa.gualeguaychu.gov.ar/apps/activa/img/1.png'); background-color: #FFAE00;"
    onload="hora_actual()">
    <%- include('../public/components/navigation') %>
        <div id="grid-tiempo">

        </div>
        <script>
            async function test() {
                const req = await fetch('http://nodetestagustin.ddns.net/tasks');
                const res = await req.json();
                const grid = document.getElementById('grid-tiempo');
                for (let item of res) {
                    grid.innerHTML += `
                    <div class="card mb-3" style="max-width: 120vh;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="img/void.png" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">${item.task_name}</h5>
                                <p class="card-text">
                                Para obtener mas información sobre ${item.task_name} click en el botón mas info
                                </p>
                                <a class="btn btn-primary">Mas info</a>
                            </div>
                        </div>
                    </div>
                </div>
                    `
                }
            }
            test()
        </script>

        <%- include('../public/components/footer.ejs') %>
        <%- include('../public/components/scripts') %>
</body>

</html>